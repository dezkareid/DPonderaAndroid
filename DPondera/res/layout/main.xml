<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <GridLayout
        android:id="@+id/gridLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.36"
        android:columnCount="7" >

        <TextView
            android:id="@+id/eti_calificacion"
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_row="0"
            android:text="CalificaciÃ³n"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/campo_calificacion"
            android:layout_width="128dp"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_row="0"
            android:inputType="number"
            android:maxLength="2"
            android:maxLines="1" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/eti_creditos"
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_row="1"
            android:text="Creditos"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/campo_creditos"
            android:layout_width="126dp"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_row="1"
            android:inputType="number"
            android:maxLength="2"
            android:maxLines="1" />

        <Button
            android:id="@+id/boton_agregar"
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_row="2"
            android:onClick="click_agregar"
            android:text="Agregar" />

        <Button
            android:id="@+id/boton_reiniciar"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:onClick="click_reiniciar"
            android:text="Reiniciar" />

        <ListView
            android:id="@+id/lista_entradas"
            android:layout_width="180dp"
            android:layout_height="163dp"
            android:layout_column="1"
            android:layout_columnSpan="4"
            android:layout_gravity="right"
            android:layout_row="3"
            android:layout_rowSpan="2" >
        </ListView>

        <Button
            android:id="@+id/boton_eliminar"
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_row="4"
            android:onClick="click_eliminar"
            android:text="Eliminar" />

        <TextView
            android:id="@+id/lab_promedio"
            android:layout_width="136dp"
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_row="5"
            android:text="Promedio->"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/eti_promedio"
            android:layout_width="94dp"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_row="5"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Space
            android:layout_width="1dp"
            android:layout_height="46dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0" />

        <Space
            android:layout_width="1dp"
            android:layout_height="61dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="1" />

        <Space
            android:layout_width="154dp"
            android:layout_height="1dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0" />

        <Space
            android:layout_width="1dp"
            android:layout_height="74dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="2" />

        <Space
            android:layout_width="1dp"
            android:layout_height="55dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="5" />

        <Space
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="3" />

        <Space
            android:layout_width="1dp"
            android:layout_height="209dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="4" />

        <Space
            android:layout_width="26dp"
            android:layout_height="1dp"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0" />
    </GridLayout>

</LinearLayout>